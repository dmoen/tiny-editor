html, body {
	padding: 0;
	margin: 0;
	height: 100%;
}

body {
	font-family: 'Arimo', sans-serif;
	background: #f7f7f7;
	font-size: 18px;
}

h1 {
	margin-top: 0;
	font-size: 30px;
}

a {
	text-decoration: none;
}


#header {
	width: 100%;
	height: 80px;
	background: #363636;
}
 
#container {
	width: 550px;
	margin: auto;
	margin-top: 40px;
}

section {
	float: left;
	width: 100%;
    box-shadow: 0 2px 10px 0 rgba(0,0,0,.3);
    box-sizing: border-box;
    padding: 30px 20px 30px 20px;
    text-align: center;
    background: #FFFFFF;
}