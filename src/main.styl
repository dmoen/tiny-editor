#simple-editor {
	position: fixed;
	z-index: 99999999;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 290px;
	transition: all 0.5s;
	
	&.no-transition {
		transition: no-transition;
	}

	&__drag-bar {
		cursor: move;
  		background: #363636;
  		height: 20px;
  		padding: 10px 10px 6px 10px;
  		font-size: 15px;
  		color: #FFFFFF;
	}
	
	&__editor-wrapper {
		box-sizing: border-box;
	}
	
	&__controls {
		float: right;
		
		.fa {
			cursor: pointer;
			position: relative;
			width: 20px;
			margin-left: 10px;		
		}
		
		.minimize {
			&:before {
			    position: absolute;
			    top: -16px;
			}
		}
		
		.dock-top {
			margin-right: 20px;
		}		
	}		
}

  #article, .mce-tinymce,.mce-stack-layout, .mce-edit-area{
    display: flex;
    flex-direction: column;
    flex: 1;
  }
   .mce-tinymce iframe{
    flex: 1;
  }